---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Nav from '../components/navbar.astro';
import ContactForm from '../components/ContactForm.astro';
---
<Layout>
  <Nav />
  <div class="p-3 space-y-3 text-center">
    <div class="font-bold text-3xl">Contact me if you dare</div>
    <p class="text-lg">I'm always open to discussing new projects and ideas, or if you just want to chat!</p>
  </div>
  <!-- split screen: form on the left, links on the right (stacks on small screens) -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8 min-h-[60vh] items-start px-4 max-w-6xl mx-auto">
    <div class="w-full">
      <!-- client:load ensures the form JS runs only in browser -->
      <ContactForm client:load />
    </div>
    <div class="flex flex-col space-y-6">
      <div class="bg-gray-100 p-4 rounded shadow">
        <h2 class="text-2xl font-semibold mb-2">Follow me everywhere!</h2>

      </div>
</Layout>
