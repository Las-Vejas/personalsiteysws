---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/navbar.astro';
import '../styles/global.css';
import Vector from '../assets/Vector.svg?url';
import placement from '../assets/logo.svg?url';
import ClipArrow from '../assets/clip + arrow.svg?url';
import GithubArrow from '../assets/github + arrow.svg?url';
import InfoArrow from '../assets/info + arrow.svg?url';
import PackageArrow from '../assets/package + arrow.svg?url';
---
<Layout>
<Nav />

<div class="flex flex-col items-center content-center justify-center min-h-screen px-5">
        <div class="w-full flex justify-center">
            <div class="relative inline-block w-full max-w-3xl mx-10">
                <img src={Vector} alt="lasvejas" class="block w-full h-auto mx-auto my-5" />
                <div class="hidden md:block">
                <img src={ClipArrow} alt="clip" class="absolute" style="width:17.5%; left:77.4%; top:19.58%; transform:translate(-50%,-50%); pointer-events:none;" />
                <img src={GithubArrow} alt="github" class="absolute" style="width:16%; left:47.75%; top:80.5%; transform:translate(-50%,-50%); pointer-events:none;" />
                <img src={InfoArrow} alt="info" class="absolute" style="width:15.2%; left:102%; top:39%; transform:translate(-50%,-50%); pointer-events:none;" />
                <img src={PackageArrow} alt="package" class="absolute" style="width:16%; left:51.3%; top:25%; transform:translate(-50%,-50%); pointer-events:pointer;" />
            </div>
            </div>
        </div>
    <h1 class="text-2xl font-bold text-center mt-10 font-mono">Welcome to my corner of the web!</h1>
</div>

</Layout>
